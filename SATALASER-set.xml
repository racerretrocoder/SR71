        <nav-volume type="double">0.7</nav-volume>
      </headset>
    </rdf>
    <adf>
      <power-btn type="bool">0</power-btn>
    </adf>
  </instrumentation>

<input>
<keyboard>
<key n="101">
  <name>e</name>
  <desc>Fire selected WCS weapon</desc>
  <binding>
    <command>nasal</command>
    <script>setprop("controls/armament/trigger",1);</script>
  </binding>
  <mod-up>
    <binding>
      <command>nasal</command>
      <script>setprop("/controls/armament/trigger",0);</script>
    </binding>
  </mod-up>
 </key>


	 <key n="114">
  <name>r</name>
  <desc>Switch Radar Range</desc>
  <binding>
 <command>nasal</command>
 <script>radar.switch_distance();screen.log.write("Radar Range: " ~ weapons.myRadar.rangeTab[radar.rangeIndex] ~ "nm.",1,1,0);</script>
</binding>
 </key> 
<key n="121">
  <name>y</name>
  <desc>select target</desc>
  <binding>
 <command>nasal</command>
 <script>radar.next_Target_Index();</script>
</binding>

</key>


 </keyboard>

 </input>

	<payload>
	    <armament>
