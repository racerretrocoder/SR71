<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <particlesystem>
    <name>smoke</name>
    <texture>smoke.png</texture>

    <emissive>true</emissive>
    <lighting>true</lighting>

    <condition>
    <and>
        <greater-than>
          <property>sim/multiplay/generic/float[19]</property>
          <value>0.5</value>
        </greater-than>
        <greater-than>
          <property>position/altitude-ft</property>
          <value>30000</value>
        </greater-than>
    </and>
    </condition>

    <attach>world</attach>

    <placer>
      <type>point</type>
    </placer>

    <shooter>
      <theta-min-deg>84</theta-min-deg>
      <theta-max-deg>86</theta-max-deg>
      <phi-min-deg>-1.5</phi-min-deg>
      <phi-max-deg>1.5</phi-max-deg>
      <speed-mps>
        <property>engines/engine/n1</property>
        <factor>1</factor>
      </speed-mps>
      <rotation-speed>
        <x-min-deg-sec>0</x-min-deg-sec>
        <y-min-deg-sec>0</y-min-deg-sec>
        <z-min-deg-sec>0</z-min-deg-sec>
        <x-max-deg-sec>0</x-max-deg-sec>
        <y-max-deg-sec>0</y-max-deg-sec>
        <z-max-deg-sec>0</z-max-deg-sec>
      </rotation-speed>
    </shooter>

    <counter>
      <particles-per-sec>
        <property>sim/multiplay/generic/float[19]</property>
        <factor>80</factor>
        <spread>40</spread>
      </particles-per-sec>
    </counter>

    <align>billboard</align>

    <particle>
      <start>
        <color>
          <red><value>   8 </value></red>
          <green><value> 0.2 </value></green>
          <blue><value>  0.01 </value></blue>
          <alpha><value> 1 </value></alpha>
        </color>
        <size>
          <value>30.0</value>
        </size>
      </start>

      <end>
        <color>
          <red><value>   0.010 </value></red>
          <green><value> 0.00400 </value></green>
          <blue><value>  0.001 </value></blue>
          <alpha><value> 0.5</value></alpha>
        </color>
        <size>
          <value>68.5</value>
        </size>
      </end>

      <life-sec>
        <value>30</value>
      </life-sec>

      <mass-kg>0.1</mass-kg>
      <radius-m>0.3</radius-m>
    </particle>

    <program>
      <fluid>   air  </fluid>
      <gravity> true </gravity>
      <wind>    true </wind>
    </program>

  </particlesystem>

</PropertyList>
